{% extends 'base.html.twig' %}

{% block title %} Lerondpoint, se connecter  {% endblock %}


{% block content %}

    <div class="centrer">
        <div class="jumbotron">
            <div class="d-flex w-100 justify-content-center">
                <ul class="nav nav-pills">
                    <li class="nav-item">
                        <a class="nav-link" href="login">Connexion</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="register">Créer un compte</a>
                    </li>
                </ul>
            </div>
            <br>
            <br>


            {{ form_start(formRegister) }}


            <div class="d-flex w-100 justify-content-between">
                <div class="form-group">
                    <label class="col-form-label" for="inputDefault">Nom *</label>
                    {{ form_row(formRegister.nom,{'attr' : {'placeholder':"Entre ton Nom ici ..." , 'id':"inputDefault" }}) }}
                </div>
                <div class="form-group">
                    <label class="col-form-label" for="inputDefault">Prénom *</label>
                    {{ form_row(formRegister.prenom,{'attr' : {'placeholder':"Entre ton Prénom ici ..." , 'id':"inputDefault" }}) }}
                </div>
            </div>
            <div class="form-group">
                <label class="col-form-label" for="inputDefault">Addresse email *</label>
                {{ form_row(formRegister.mail,{'attr' : {'placeholder':"Entre ton addresse email ici ..." , 'id':"inputDefault" }}) }}
            </div>

            <div class="d-flex w-100 justify-content-between">
                <div class="form-group">
                    <label class="col-form-label" for="inputDefault">Mot de passe *</label>
                    {{ form_row(formRegister.mdp,{'attr' : {'placeholder':"Mot de passe" , 'id':"inputDefault" }}) }}
                </div>
                <div class="form-group">
                    <label class="col-form-label" for="inputDefault">Confirmez le mot de passe *</label>
                    {{ form_row(formRegister.mdpConfirm,{'attr' : {'placeholder':"Mot de passe" , 'id':"inputDefault" }}) }}
                </div>
            <br>
            </div>

                <label class="form-check-label">
                    <div class="d-flex w-100 justify-content-between">
                    {{ form_row(formRegister.accept) }}
                    <p>"J'accepte les <a href="/doc/cgv" target="_blank" >Conditions Générales de Vente</a> et les <a href="/doc/cgu" target="_blank"> Conditions<br> Générales d'utilisation</a>" </p>
                    </div>
                </label>

            <p style="color: red">
                {% if error is defined %}
                    {{ error }}
                {% endif %}
            </p>



            <br>
            <br>
            <div style="text-align: center;">
                <button type="submit" class="btn btn-outline-primary" >Créer un compte</button>
            </div>


            {{ form_end(formRegister) }}



        </div>
    </div>




{% endblock %}