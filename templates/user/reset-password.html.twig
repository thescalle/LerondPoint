{% extends 'base.html.twig' %}

{% block title %} Lerondpoint, changer de mot de passe  {% endblock %}


{% block content %}

    <div class="centrer">
        <div class="jumbotron">
            <h2>Changer de mot de passe</h2>
            {{ form_start(formMdp) }}

            <div class="form-group">
                <label class="col-form-label" for="inputDefault">Addresse email *</label>
                {{ form_row(formMdp.email,{'attr' : {'placeholder':"Entrez votre email"}}) }}
            </div>

            <div class="form-group">
                <label class="col-form-label" for="inputDefault">Confirmez votre addresse email *</label>
                {{ form_row(formMdp.emailTwo,{'attr' : {'placeholder':"Entrez votre email"}}) }}
            </div>

            <div class="form-group">
                <label class="col-form-label" for="inputDefault">Nouveau mot de passe *</label>
                {{ form_row(formMdp.password,{'attr' : {'placeholder':"Entrez votre mot de passe"}}) }}
            </div>

            <div class="form-group">
                <label class="col-form-label" for="inputDefault">Confirmez le nouveau mot de passe *</label>
                {{ form_row(formMdp.passwordTwo,{'attr' : {'placeholder':"Entrez votre mot de passe"}}) }}
            </div>

            <p style="color: red"> {% if error is defined %} {{ error }} {% endif %}   </p>
            <div style="text-align: center;">
                <button type="submit" class="btn btn-outline-primary" >Changer le mot de passe</button>
            </div>


            {{ form_end(formMdp) }}
        </div>
    </div>


{% endblock %}