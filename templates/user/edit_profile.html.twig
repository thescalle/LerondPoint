{% extends 'base.html.twig' %}

{% block title %} Lerondpoint, edit profile  {% endblock %}


{% block content %}


        <div class="centrer">
            <div class="jumbotron">
                <div class="form-group">
                    {{ form_start(user) }}

                    <div class="form-group">
                        <label class="col-form-label" for="inputDefault">Addresse email</label>
                        {{ form_row(user.email,{'attr' : {'placeholder':"Entrez votre email"}}) }}
                    </div>
                    <br>
                    <div class="form-group">
                        <label class="col-form-label" for="inputDefault">Addresse</label>
                        {{ form_row(user.address,{'attr' : {'placeholder':"Entrez votre ville"}}) }}
                    </div>
                    <div class="form-group">
                        <label class="col-form-label" for="inputDefault">Ville</label>
                        {{ form_row(user.city,{'attr' : {'placeholder':"Entrez votre ville"}}) }}
                    </div>
                    <div class="form-group">
                        <label class="col-form-label" for="inputDefault">Numéro de telephone</label>
                        {{ form_row(user.phone,{'attr' : {'placeholder':"Entrez votre numéro de téléphone"}}) }}
                    </div>



                    <br>
                    <button type="submit" class="btn btn-primary" >Enregistrer </button>
                    {{ form_end(user) }}
                </div>
            </div>
        </div>



{% endblock %}